description "Tomcat Server"

  start on runlevel [2345]
  stop on runlevel [!2345]
  respawn
  respawn limit 10 5

  # run as non privileged user 
  env TOMCAT7_USER=tomcat7
  env TOMCAT7_GROUP=tomcat7

  # adapt paths - Replace with your Paths:
  env JAVA_HOME=/usr/lib/jvm/default-java
  env CATALINA_HOME=/usr/share/tomcat7
  env DEFAULT=/etc/default/tomcat7
  env JVM_TMP=/tmp/tomcat7-tomcat7-tmp

  # adapt java options to suit your needs:
  env JAVA_OPTS="-Djava.awt.headless=true -Xms512M -Xmx1024M -server -XX:+UseParallelGC"

pre-start script

  OPENJDKS=""


  exec $CATALINA_HOME/bin/catalina.sh run

  # cleanup temp directory after stop
  post-stop script 
    rm -rf $CATALINA_HOME/temp/*
  end script
